    <script>
        function generateSMART() {
            const title = document.getElementById('courseTitle').value;
            if (title) {
                // AI or logic to generate SMART objective
                const objective = `Al finalizar el curso, el participante será capaz de aplicar las técnicas de ${title} de manera efectiva, cumpliendo con los estándares del EC0301.`;
                document.getElementById('objetivosContent').innerHTML = `
                    <h3>Objetivo General:</h3>
                    <p>${objective}</p>
                `;
                toast('Objetivo SMART generado', 'success');
            } else {
                toast('Por favor, ingresa el título del curso', 'error');
            }
        }

        function exportCarta(formato) {
            const content = document.getElementById('objetivosContent').innerText;
            const doc = new jsPDF();
            doc.text(content, 10, 10);
            if (formato === 'pdf') {
                doc.save('Carta_Descriptiva.pdf');
            } else if (formato === 'docx') {
                const docxContent = new docx.Document({
                    sections: [{
                        properties: {},
                        children: [new docx.Paragraph(content)]
                    }]
                });
                Packer.toBlob(docxContent).then(blob => {
                    saveAs(blob, 'Carta_Descriptiva.docx');
                });
            }
        }

        function toast(message, type) {
            Swal.fire({
                toast: true,
                position: 'top-end',
                icon: type,
                title: message,
                showConfirmButton: false,
                timer: 3000
            });
        }
    </script>
